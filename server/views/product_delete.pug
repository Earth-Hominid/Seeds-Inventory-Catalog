extends layout

block content
  div.max-w-md.mx-auto.bg-gray-900.rounded-xl.shadow-md.overflow-hidden.md_max-w-2xl.mt-4
    div.md_flex
      div.md_shrink-0
        p.w-full 
          div.p-4
            h1.tracking-wide.text-lg.text-indigo-300.font-semibold.mb-2 #{title}: #{product.name}
  
      p.px-4.text-sm.text-gray-500.font-semibold.mb-2 Are you certain you want to delete #{product.name}?
      
      div.flex.items-center.w-full
       form(method='POST' action='')
        input#productid(type='hidden',name='productid', required='true', value=product._id )

        button.m-4.p-2.bg-rose-800.hover_bg-rose-900.text-white.rounded-md(type='submit') Delete