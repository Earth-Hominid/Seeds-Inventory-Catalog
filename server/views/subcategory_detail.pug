extends layout

block content
  h1.text-indigo-200.text-center.text-xl.mt-2 #{subcategory.name}

  each product in subcategory_products
    div.max-w-xs.bg-gray-900.mx-auto.rounded-xl.shadow-md.overflow-hidden.md_max-w-2xl.m-4
      div.md_flex
        div.md_shrink-0 
          img.md_h-auto.w-full.object-cover.md_w-48.h-48(src='/images/dolce-basil.png')
        div.p-6
          div.uppercase.tracking-wide.text-sm.text-indigo-300.font-semibold $#{`${product.price} | ${product.packageSize}`}
            a.block.text-sm.leading-tight.font-medium.text-white.hover_underline.mt-1(href=subcategory.url) #{product.name}
            p.mt-2.text-gray-500.text-xs #{product.description}
  else
    h1.text-center.block.mt-2.text-slate-200.mb-1.text-lg #{subcategory.name} is currently empty. You can add products by using the side-bar.