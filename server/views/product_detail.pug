extends layout

block content
  
  div.max-w-xs.bg-white.mx-auto.rounded-xl.shadow-md.overflow-hidden.md_max-w-2xl.m-4
      div.md_flex
        div.md_shrink-0 
          img.md_h-auto.w-full.object-cover.md_w-48.h-48(src='/images/dolce-basil.png')
        div.p-6
          div.tracking-wide.text-sm.text-indigo-500.font-semibold #{product.name}
            div.text-xs.text-black.mt-1 SKU: #{product.stockNumber}
            p.mt-2.text-slate-500.text-xs #{product.description}
            div.block.text-xs.leading-tight.font-medium.text-black.mt-2 $#{`${product.price} | Package Size: ${product.packageSize}`} 
            div.text-xs.font-medium.text-black.mt-2 In Stock: #{product.quantity}
            div.text-xs
              p.mt-2.mb-1 #{product.subcategory[0].name} | #{product.category[0].name} | #{product.department[0].name}