extends layout 

block content 

  h1 #{title}

  form(method='POST' action='')
    div
      label(for='title') Department: 
      input#title(type='text', placeholder='Fantasy, Poetry etc.' name='name' value=(undefined===genre ? '' : genre.name))
    button(type='submit') Submit
  
  if errors 
    ul 
      for error in errors 
      li!=error.msg
