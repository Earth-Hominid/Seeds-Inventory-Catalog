extends layout

block content

  div.max-w-md.mx-auto.bg-gray-900.rounded-xl.shadow-md.overflow-hidden.md_max-w-2xl.mt-4
    div.md_flex
      div.md_shrink-0
        p.w-full 
          div.p-8
            div.uppercase.tracking-wide.text-lg.text-indigo-300.font-semibold.mb-2
              h1=title
              ul
                each product in product_list
                  li
                    a(href=product.url) #{product.name}
                    |  (#{product.category[0].name})

                else
                  li The database does not contain any products.

  